<!DOCTYPE html>
<html>
<head>
  <title>ELO Kitty</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/superhero/bootstrap.min.css">
</head>
<body>

<div class="wrapper">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-font-color navbar-brand" href="<%= root_path %>">ELO Kitty</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="navbar-font-color dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">About <span class="caret"></span></a>
            <ul class="dropdown-background dropdown-menu">
              <li><a class="navbar-font-color" href="<%= about_path %>">About and FAQs</a></li>
              <li><a class="navbar-font-color" href="<%= privacy_path %>">Privacy Policy</a></li>
            </ul>
          </li>
          <li><a class="navbar-font-color" href="<%= root_path %>">Vote! <span class="sr-only">(current)</span></a></li>
          <li><a class="navbar-font-color" href="<%= cats_rankings_path %>">Top 10 </a></li>
          <% if current_user %>
            <li><%= link_to "Your Kitties", edit_user_path(current_user), class: "navbar-font-color" %></li>
            <li><%= link_to "Logout", logout_path, method: "delete", class: "navbar-font-color" %></li>
          <% else %>
            <li><%= link_to "Instagram Login", "/auth/instagram", class: "navbar-font-color" %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <%= yield %>

  <div class="push">
  </div>

</div>

<footer class="footer">
  <div class="container">
    <p>&#169; ELO Kitty 2016</p>
  </div>
</footer>


</body>
</html>
