<div class="col-xs-12 col-md-8 col-md-offset-2">  
  <% @cats.each_with_index do |cat, index| %>
    <div class="cat-ranking-container">
      <div class="col-xs-12 col-md-6">
        <div class="nailthumb-container square-250 cat-ranking-image-container">
          <img class="image-fit" src="<%= cat.url %>">
        </div>
      </div>
      <div class="col-xs-12 col-md-6 cat-ranking-info-container">
        <h3><span class="bold">Name:</span> <%= cat.name %></h3>
        <ul>
          <li><span class="bold">Rank:</span> <%= index + 1 %></li>
          <li><span class="bold">ELO Rating:</span> <%= cat.elo_score %></li>
          <li><span class="bold">IG:</span> <a href="http://www.instagram.com/<%= cat.owner.username %>"><%= cat.owner.username %></a></li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
